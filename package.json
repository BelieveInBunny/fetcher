{
  "name": "fetcher",
  "version": "3.0.0",
  "description": "a media downloader",
  "engines": {
    "node": ">=14.15.0"
  },
  "scripts": {
    "start-dev": "yarn build && node dist/index.js",
    "build": "yarn clean && run-p --aggregate-output build:*",
    "build:ts": "tsc",
    "build:frontend": "webpack --color",
    "lint": "run-p --aggregate-output --continue-on-error lint:*",
    "lint:eslint": "eslint --ext .ts --format unix src/",
    "lint:prettier": "prettier --check 'src/**/*.{ts,js}'",
    "lint:stylelint": "stylelint --color 'src/**/*.css'",
    "format": "prettier --write 'src/**/*.{ts,js}'",
    "test": "NODE_ENV=test TS_NODE_FILES=true LOG_LEVEL=silent nyc --reporter=text mocha -r ts-node/register --color 'src/**/*.spec.ts' --exit",
    "clean": "rm -rf .nyc_output/ dist/",
    "check-outdated": "check-outdated --ignore-pre-releases --ignore-dev-dependencies"
  },
  "dependencies": {
    "chalk": "4.1.0",
    "express": "4.17.1",
    "form-data": "3.0.0",
    "got": "11.8.0",
    "irc-colors": "1.5.0",
    "irc-framework": "4.9.0",
    "level": "6.0.1",
    "loglevel": "1.7.0",
    "loglevel-plugin-prefix": "0.8.4",
    "pug": "3.0.0",
    "rss-parser": "3.9.0",
    "sanitize-filename": "1.6.3",
    "source-map-support": "0.5.19",
    "tough-cookie": "4.0.0",
    "tslib": "2.0.3",
    "webtorrent": "0.110.1"
  },
  "devDependencies": {
    "@types/chai": "4.2.14",
    "@types/express": "4.17.8",
    "@types/levelup": "4.3.0",
    "@types/mocha": "8.0.3",
    "@types/node": "14.14.6",
    "@types/sinon": "9.0.8",
    "@types/stream-buffers": "3.0.3",
    "@types/tough-cookie": "4.0.0",
    "@types/webtorrent": "0.109.0",
    "@types/xml2js": "0.4.5",
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@typescript-eslint/parser": "4.6.1",
    "chai": "4.2.0",
    "check-outdated": "2.4.1",
    "clean-webpack-plugin": "3.0.0",
    "css-loader": "5.0.1",
    "cssnano": "4.1.10",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "jquery": "3.5.1",
    "mini-css-extract-plugin": "1.3.0",
    "mocha": "8.2.1",
    "mock-fs": "4.13.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "postcss-loader": "4.0.4",
    "postcss": "8.1.6",
    "prettier": "2.1.2",
    "proxyquire": "2.1.3",
    "sinon": "9.2.1",
    "stream-buffers": "3.0.2",
    "stylelint": "13.7.2",
    "stylelint-config-standard": "20.0.0",
    "ts-node": "9.0.0",
    "typescript": "4.0.5",
    "webpack": "4.44.2",
    "webpack-cli": "4.1.0",
    "webpack-manifest-replace-plugin": "1.0.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "all": true
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 150
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "env": {
      "browser": false,
      "node": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "no-console": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-empty-function": "off",
      "max-len": [
        "error",
        {
          "code": 200
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
