{
  "name": "fetcher",
  "version": "5.0.0",
  "description": "a media downloader",
  "engines": {
    "node": ">=16.13.0"
  },
  "scripts": {
    "start-dev": "run-p -lr start-dev:*",
    "start-dev:frontend": "webpack --watch --progress",
    "start-dev:server": "TS_NODE_FILES=true node --no-warnings --loader ts-node/esm src/index.ts --project tsconfig.json",
    "build": "yarn clean && run-p --aggregate-output build:*",
    "build:ts": "tsc",
    "build:frontend": "webpack --color",
    "lint": "run-p --aggregate-output --continue-on-error lint:*",
    "lint:eslint": "eslint --format unix src/",
    "lint:prettier": "prettier --check 'src/**/*.{ts,js}'",
    "lint:stylelint": "stylelint --color 'src/**/*.css'",
    "format": "prettier --write 'src/**/*.{ts,js}'",
    "test": "NODE_ENV=test TS_NODE_FILES=true LOG_LEVEL=silent c8 --reporter=text mocha --color 'src/**/*.spec.ts' --exit",
    "clean": "rm -rf .nyc_output/ dist/"
  },
  "dependencies": {
    "chalk": "5.0.0",
    "express": "4.17.2",
    "form-data": "4.0.0",
    "got": "12.0.1",
    "irc-colors": "1.5.0",
    "irc-framework": "4.12.1",
    "level": "7.0.1",
    "loglevel": "1.8.0",
    "loglevel-plugin-prefix": "0.8.4",
    "pug": "3.0.2",
    "rss-parser": "3.12.0",
    "sanitize-filename": "1.6.3",
    "source-map-support": "0.5.21",
    "tough-cookie": "4.0.0",
    "tslib": "2.3.1",
    "webtorrent": "1.7.2"
  },
  "devDependencies": {
    "@types/chai": "4.3.0",
    "@types/express": "4.17.13",
    "@types/levelup": "5.1.0",
    "@types/mocha": "9.1.0",
    "@types/node": "16.11.21",
    "@types/sinon": "10.0.9",
    "@types/stream-buffers": "3.0.4",
    "@types/tough-cookie": "4.0.1",
    "@types/webtorrent": "0.109.3",
    "@types/xml2js": "0.4.9",
    "@typescript-eslint/eslint-plugin": "5.10.1",
    "@typescript-eslint/parser": "5.10.1",
    "c8": "7.11.0",
    "chai": "4.3.6",
    "copy-webpack-plugin": "10.2.3",
    "css-loader": "6.5.1",
    "cssnano": "5.0.16",
    "eslint": "8.8.0",
    "eslint-config-prettier": "8.3.0",
    "jquery": "3.6.0",
    "mini-css-extract-plugin": "2.5.3",
    "mocha": "9.2.0",
    "mock-fs": "5.1.2",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.5",
    "postcss-loader": "6.2.1",
    "prettier": "2.5.1",
    "sinon": "13.0.0",
    "stream-buffers": "3.0.2",
    "stylelint": "14.3.0",
    "stylelint-config-standard": "24.0.0",
    "ts-node": "10.4.0",
    "typescript": "4.5.5",
    "webpack": "5.67.0",
    "webpack-cli": "4.9.2",
    "webpack-manifest-plugin": "4.1.1"
  },
  "type": "module",
  "c8": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/**/*.d.ts"
    ],
    "all": true
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 150
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "browser": true,
      "node": false,
      "jquery": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "no-console": "error",
      "max-len": [
        "error",
        {
          "code": 200
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ],
        "parserOptions": {
          "project": "./tsconfig.json"
        },
        "rules": {
          "@typescript-eslint/no-explicit-any": "off",
          "@typescript-eslint/explicit-module-boundary-types": "off",
          "@typescript-eslint/no-empty-function": "off"
        }
      }
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
