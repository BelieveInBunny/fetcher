{
  "name": "fetcher",
  "version": "2.2.0",
  "description": "a media downloader",
  "engines": {
    "node": ">=12.10.0"
  },
  "scripts": {
    "start-dev": "yarn build && node dist/index.js",
    "build": "rm -rf dist/ && tsc && cp -r src/views/ dist/ && webpack --color",
    "lint": "run-p --aggregate-output --continue-on-error lint:*",
    "lint:eslint": "eslint --ext .ts --format unix src/",
    "lint:prettier": "prettier --check 'src/**/*.{ts,js}'",
    "lint:stylelint": "stylelint --color 'src/**/*.css'",
    "format": "prettier --write 'src/**/*.{ts,js}'",
    "test": "NODE_ENV=test TS_NODE_FILES=true LOG_LEVEL=silent nyc --reporter=text mocha -r ts-node/register --color 'src/**/*.spec.ts' --exit",
    "clean": "rm -rf .nyc_output/ dist/",
    "check-outdated": "check-outdated --ignore-pre-releases --ignore-dev-dependencies"
  },
  "dependencies": {
    "abort-controller": "3.0.0",
    "chalk": "4.0.0",
    "express": "4.17.1",
    "fetch-cookie": "0.8.0",
    "form-data": "3.0.0",
    "irc-colors": "1.5.0",
    "irc-framework": "4.8.1",
    "level": "6.0.1",
    "loglevel": "1.6.8",
    "loglevel-plugin-prefix": "0.8.4",
    "node-fetch": "2.6.0",
    "pug": "2.0.4",
    "rss-parser": "3.7.6",
    "sanitize-filename": "1.6.3",
    "source-map-support": "0.5.17",
    "tslib": "1.11.1",
    "webtorrent": "0.108.1"
  },
  "devDependencies": {
    "@types/chai": "4.2.11",
    "@types/express": "4.17.6",
    "@types/levelup": "4.3.0",
    "@types/mocha": "7.0.2",
    "@types/node": "13.13.0",
    "@types/node-fetch": "2.5.6",
    "@types/sinon": "9.0.0",
    "@types/stream-buffers": "3.0.3",
    "@types/webtorrent": "0.107.2",
    "@types/xml2js": "0.4.5",
    "@typescript-eslint/eslint-plugin": "2.28.0",
    "@typescript-eslint/parser": "2.28.0",
    "chai": "4.2.0",
    "check-outdated": "1.4.3",
    "copy-webpack-plugin": "5.1.1",
    "css-loader": "3.5.2",
    "cssnano": "4.1.10",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "jquery": "3.5.0",
    "mini-css-extract-plugin": "0.9.0",
    "mocha": "7.1.1",
    "mock-fs": "4.11.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.0.1",
    "postcss-loader": "3.0.0",
    "prettier": "2.0.4",
    "proxyquire": "2.1.3",
    "sinon": "9.0.2",
    "stream-buffers": "3.0.2",
    "stylelint": "13.3.2",
    "stylelint-config-standard": "20.0.0",
    "ts-node": "8.8.2",
    "typescript": "3.8.3",
    "webpack": "4.42.1",
    "webpack-cli": "3.3.11"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "all": true
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 150
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "env": {
      "browser": false,
      "node": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "no-console": "error",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-empty-function": "off",
      "max-len": [
        "error",
        {
          "code": 200
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
