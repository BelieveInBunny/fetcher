{
  "name": "fetcher",
  "version": "3.4.0",
  "description": "a media downloader",
  "engines": {
    "node": ">=14.15.0"
  },
  "scripts": {
    "start-dev": "yarn build && node dist/index.js",
    "build": "yarn clean && run-p --aggregate-output build:*",
    "build:ts": "tsc",
    "build:frontend": "webpack --color",
    "lint": "run-p --aggregate-output --continue-on-error lint:*",
    "lint:eslint": "eslint --ext .ts --format unix src/",
    "lint:prettier": "prettier --check 'src/**/*.{ts,js}'",
    "lint:stylelint": "stylelint --color 'src/**/*.css'",
    "format": "prettier --write 'src/**/*.{ts,js}'",
    "test": "NODE_ENV=test TS_NODE_FILES=true LOG_LEVEL=silent nyc --reporter=text mocha -r ts-node/register --color 'src/**/*.spec.ts' --exit",
    "clean": "rm -rf .nyc_output/ dist/"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "express": "4.17.1",
    "form-data": "4.0.0",
    "got": "11.8.2",
    "irc-colors": "1.5.0",
    "irc-framework": "4.11.0",
    "level": "7.0.0",
    "loglevel": "1.7.1",
    "loglevel-plugin-prefix": "0.8.4",
    "pug": "3.0.2",
    "rss-parser": "3.12.0",
    "sanitize-filename": "1.6.3",
    "source-map-support": "0.5.19",
    "tough-cookie": "4.0.0",
    "tslib": "2.3.1",
    "webtorrent": "1.5.5"
  },
  "devDependencies": {
    "@types/chai": "4.2.21",
    "@types/express": "4.17.13",
    "@types/levelup": "4.3.3",
    "@types/mocha": "9.0.0",
    "@types/node": "14.17.14",
    "@types/sinon": "10.0.2",
    "@types/stream-buffers": "3.0.4",
    "@types/tough-cookie": "4.0.1",
    "@types/webtorrent": "0.109.1",
    "@types/xml2js": "0.4.9",
    "@typescript-eslint/eslint-plugin": "4.30.0",
    "@typescript-eslint/parser": "4.30.0",
    "chai": "4.3.4",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "9.0.1",
    "css-loader": "6.2.0",
    "cssnano": "5.0.8",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "jquery": "3.6.0",
    "mini-css-extract-plugin": "2.2.2",
    "mocha": "9.1.1",
    "mock-fs": "5.0.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "postcss": "8.3.6",
    "postcss-loader": "6.1.1",
    "prettier": "2.3.2",
    "proxyquire": "2.1.3",
    "sinon": "11.1.2",
    "stream-buffers": "3.0.2",
    "stylelint": "13.13.1",
    "stylelint-config-standard": "22.0.0",
    "ts-node": "10.2.1",
    "typescript": "4.4.2",
    "webpack": "5.52.0",
    "webpack-cli": "4.8.0",
    "webpack-manifest-plugin": "4.0.2"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "all": true
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 150
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "env": {
      "browser": false,
      "node": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "no-console": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-empty-function": "off",
      "max-len": [
        "error",
        {
          "code": 200
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
